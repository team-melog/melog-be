# Production Environment Variables
# 이 파일을 .env로 복사해서 사용하세요

# PostgreSQL Database Configuration
POSTGRES_DB=melog
POSTGRES_USER=melog
POSTGRES_PASSWORD=your_secure_password_here

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=prod

# Clova Speech API Configuration
CLOVA_SPEECH_URL=https://naveropenapi.apigw.ntruss.com
CLOVA_SPEECH_CLIENT_ID=your_clova_speech_client_id_here
CLOVA_SPEECH_CLIENT_SECRET=your_clova_speech_client_secret_here
CLOVA_SPEECH_STT_ENDPOINT=/recog/v1/stt
CLOVA_SPEECH_DEFAULT_LANG=Kor
CLOVA_SPEECH_MAX_DURATION=60
CLOVA_SPEECH_SUPPORTED_FORMATS=[mp3, aac, ac3, ogg, flac, wav]
CLOVA_SPEECH_TIMEOUT_MS=10000

# Clova Studio Configuration
CLOVA_STUDIO_BASE_URL=https://clovastudio.stream.ntruss.com
CLOVA_STUDIO_API_KEY=your_clova_studio_api_key_here
CLOVA_STUDIO_MODEL=HCX-005
CLOVA_STUDIO_TIMEOUT_MS=8000

# Docker Hub Configuration (배포 시 사용)
DOCKERHUB_USERNAME=your_dockerhub_username
IMAGE_TAG=latest
